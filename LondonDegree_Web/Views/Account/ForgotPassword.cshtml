@using LondonDegree_Web.Models

@{
    Layout = "~/Views/Shared/_ExternalLayout.cshtml";
}

<div class="breadcrumb-container">
    <div class="container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><i class="fa fa-home pr-2"></i><a class="link-dark" href="@Url.Action("Index","Home")">Home</a></li>
            <li class="breadcrumb-item active">Forgot password</li>
        </ol>
    </div>
</div>

<section class="main-container">
    <div class="container">
        <div class="row">
            <!-- main start -->
            <!-- ================ -->
            <div class="main col-lg-12">
                <!-- page-title start -->
                <!-- ================ -->
                <h1 class="page-title"><i class="fa fa-envelope">&nbsp;Forgot password</i></h1>
                <div class="separator-2"></div>
                <!-- page-title end -->
                <p>Please enter your email address in the box provided below and click reset password! You will shortly get an email from us with the instructions of setting up a new password.</p>
                <div class="contact-form">
                    <form action="@Url.Action("ForgotPassword", "Account")" id="forgotpwdform" method="post">
                        @Html.AntiForgeryToken()
                        <div class="form-row">
                            <div class="col-md-12">
                                <div class="form-group has-feedback">
                                    <label>Email</label>
                                    <input id="Email" name="Email" type="email" value="" class="form-control">
                                    <i class="fa fa-envelope form-control-feedback"></i>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-default btn-sm btn-animated">Reset password<i class="pl-1 fa fa-key"></i></button>
                    </form>
                </div>
            </div>
            <!-- main end -->

        </div>
    </div>
</section>